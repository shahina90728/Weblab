<body>

<img id="img1" src="/home/mca/Pictures/car1.jpeg">
<p id="imgText">Car Model 1</p>

<script>
    let images = [
        "/home/mca/Pictures/car1.jpeg",
        "/home/mca/Pictures/car4.jpeg",
        "/home/mca/Pictures/car3.jpg"
    ];

    let texts = [
        "Car Model 1",
        "BMW ",
        " 3"
    ];
    let colors = [
        "green",
        "blue",
        "red"
    ];

    let index = 0; 
    let img = document.getElementById("img1");
    let caption = document.getElementById("imgText");

    img.addEventListener("mouseover", function () {
        index = (index + 1) % images.length; 
        img.src = images[index];
        caption.textContent = texts[index];
        caption.style.color = colors[index]; 
    });
</script>

